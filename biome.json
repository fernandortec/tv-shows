{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"security": { "noDangerouslySetInnerHtml": "off" },
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 90,
		"indentWidth": 2,
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "es5",
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"arrowParentheses": "always",
			"bracketSameLine": false
		}
	}
}
